<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ingenieur.ese.eseandroid"
    android:versionCode="10"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="23" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <!-- Tell the system this app requires OpenGL ES 3.0. -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- FOR APK EXPANSIONS -->
    <!-- Required to access Google Play Licensing -->
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />

    <!-- Required to download files from Google Play -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->


    <!-- Required to keep CPU alive while downloading files (NOT to keep screen awake) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required to poll the state of the network connection and respond to changes -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Required to check whether Wi-Fi is enabled -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.ingenieur.ese.eseandroid.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ingenieur.ese.eseandroid.permission.C2D_MESSAGE" /> <!-- Required to read and write the expansion files on shared storage -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <application
        android:icon="@drawable/tools"
        android:label="@string/app_name"
        android:largeHeap="true" >
        <activity
            android:name="com.ingenieur.andyelderscrolls.ElderScrollsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Red Mountain Tools" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.MorrowindActivity"
            android:configChanges="keyboardHidden|orientation"
            android:icon="@drawable/ic_launcher"
            android:label="Call of Red Mountain" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.nifdisplay.NifDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Nif Display"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.kfdisplay.KfDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Kf Display"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.jbullet.JBulletActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="JBullet"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.andyesexplorer.AndyESExplorerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="ESExplorer"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity"
            android:screenOrientation="sensorLandscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>

        <service android:name="com.ingenieur.andyelderscrolls.utils.obb.ObbDownloaderService" />

        <receiver android:name="com.ingenieur.andyelderscrolls.utils.obb.ObbAlarmServiceReceiver" />
        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>
        <receiver
            android:name="com.google.android.gms.measurement.AppMeasurementInstallReferrerReceiver"
            android:enabled="true"
            android:permission="android.permission.INSTALL_PACKAGES" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.google.android.gms.measurement.AppMeasurementService"
            android:enabled="true"
            android:exported="false" />

        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.ingenieur.ese.eseandroid" />
            </intent-filter>
        </receiver>
        <!--
 Internal (not exported) receiver used by the app to start its own exported services
             without risk of being spoofed.
        -->
        <receiver
            android:name="com.google.firebase.iid.FirebaseInstanceIdInternalReceiver"
            android:exported="false" />
        <!--
 FirebaseInstanceIdService performs security checks at runtime,
             no need for explicit permissions despite exported="true"
        -->
        <service
            android:name="com.google.firebase.iid.FirebaseInstanceIdService"
            android:exported="true" >
            <intent-filter android:priority="-500" >
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.ingenieur.ese.eseandroid.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>