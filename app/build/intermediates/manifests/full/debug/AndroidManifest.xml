<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ingenieur.ese.eseandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/tools"
        android:label="@string/app_name"
        android:largeHeap="true" >
        <activity
            android:name="com.ingenieur.andyelderscrolls.ElderScrollsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="ES Tools" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.MorrowindActivity"
            android:configChanges="keyboardHidden|orientation"
            android:icon="@drawable/ic_launcher"
            android:label="Call of Morrowind" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.nifdisplay.NifDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Nif Display"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ingenieur.andyelderscrolls.ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.kfdisplay.KfDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Kf Display"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ingenieur.andyelderscrolls.ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.jbullet.JBulletActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="JBullet"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ingenieur.andyelderscrolls.ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.andyesexplorer.AndyESExplorerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="ESExplorer"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity"
            android:screenOrientation="sensorLandscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ingenieur.andyelderscrolls.ElderScrollsActivity" />
        </activity>
    </application>

</manifest>