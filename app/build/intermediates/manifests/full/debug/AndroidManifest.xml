<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ingenieur.ese.eseandroid"
    android:versionCode="4"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <!-- Tell the system this app requires OpenGL ES 3.0. -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- FOR APK EXPANSIONS -->
    <!-- Required to access Google Play Licensing -->
    <uses-permission android:name="com.android.vending.CHECK_LICENSE" />

    <!-- Required to download files from Google Play -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->


    <!-- Required to keep CPU alive while downloading files (NOT to keep screen awake) -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required to poll the state of the network connection and respond to changes -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Required to check whether Wi-Fi is enabled -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- Required to read and write the expansion files on shared storage -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <application
        android:icon="@drawable/tools"
        android:label="@string/app_name"
        android:largeHeap="true" >
        <activity
            android:name="com.ingenieur.andyelderscrolls.ElderScrollsActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="ES Tools" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.MorrowindActivity"
            android:configChanges="keyboardHidden|orientation"
            android:icon="@drawable/ic_launcher"
            android:label="Call of Red Mountain" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.nifdisplay.NifDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Nif Display"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.kfdisplay.KfDisplayActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="Kf Display"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.jbullet.JBulletActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="JBullet"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>
        <activity
            android:name="com.ingenieur.andyelderscrolls.andyesexplorer.AndyESExplorerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="ESExplorer"
            android:parentActivityName="com.ingenieur.andyelderscrolls.ElderScrollsActivity"
            android:screenOrientation="sensorLandscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity" />
        </activity>

        <service android:name="com.ingenieur.andyelderscrolls.utils.obb.ObbDownloaderService" />

        <receiver android:name="com.ingenieur.andyelderscrolls.utils.obb.ObbAlarmServiceReceiver" />
    </application>

</manifest>