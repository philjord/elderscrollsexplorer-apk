<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="141"
    android:versionName="1.41">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <!-- Tell the system this app requires OpenGL ES 3.0. -->
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

      <!-- for cardboard -->
    <uses-permission android:name="com.android.vending.VIBRATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:launchMode="singleInstance">

        <activity
            android:name=".MorrowindActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Call of Red Mountain"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ElderScrollsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Red Mountain Tools"
            android:icon="@drawable/ic_tools"
            android:exported="false"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".nifdisplay.NifDisplayActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Nif Display"
            android:parentActivityName=".ElderScrollsActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity"/>
        </activity>
        <activity
            android:name=".jbullet.JBulletActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="JBullet"
            android:parentActivityName=".ElderScrollsActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity"/>
        </activity>
        <activity
            android:name=".andyesexplorer.AndyESExplorerActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="ESExplorer"
            android:parentActivityName=".ElderScrollsActivity"
            android:screenOrientation="sensorLandscape"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ElderScrollsActivity"/>
        </activity>
        <activity android:label="@string/app_name"
                  android:name="simpleandroid.JoglStatusActivity"/>
        <activity android:label="@string/app_name"
            android:name="simpleandroid.JoglHelloWorldActivity"/>


    </application>
</manifest>
